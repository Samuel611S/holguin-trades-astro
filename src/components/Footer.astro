  {preFooterDisclaimers.map(disclaimer => (
    <div id={disclaimer.id} key={disclaimer.id}>
      <strong class="block text-primary-500 mb-1">{disclaimer.name}</strong>
      <p>{disclaimer.content}</p>
    </div>
  ))}
</section>

